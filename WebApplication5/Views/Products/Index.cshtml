@model PagedList.IPagedList<WebApplication5.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-2">Parallax Template</h1>
            <div class="row center">
                <h5 class="header col s12 light">A modern responsive front-end framework based on Material Design</h5>
            </div>
            <div class="row center">
                <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">Get Started</a>
            </div>
            <br><br>
        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Content/images/materialize/background1.jpg")" alt="Unsplashed background img 1"></div>
</div>



<div class="container">
    <div class="section">
        <div class="row z-depth-1" style="padding: 10px">
            @using (Html.BeginForm("Index", "Products", FormMethod.Get))
            {
                <p class="light">
                    Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                    <input class="waves-effect waves-light btn" type="submit" value="Search" />
                </p>
            }
        </div>
        <div class="row">
            <h3>Sort By:</h3>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, new { @class = "waves-effect waves-light btn" })
            
            @Html.ActionLink("Create Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, new { @class = "waves-effect waves-light btn" })
            <div class="col s12 center">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col s4" style="padding: 10px;">
                            <div class="card">
                                <div class="card-image">
                                    <img class="responsive-img" src="~/Content/images/@Html.Raw(item.ImageLink)"/>
                                    <h2 class="card-title">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </h2>
                                </div>
                                <div class="card-content">
                                    <div class="row">
                                        <p class="light col s6">Name:</p>
                                        <p class="light col s6">@Html.DisplayFor(modelItem => item.Name)</p>
                                    </div>

                                    <div class="row">
                                        <p class="light col s6">Title:</p>
                                        <p class="light col s6">@Html.DisplayFor(modelItem => item.Description)</p>
                                    </div>

                                    <div class="row">
                                        <p class="light col s6">Description:</p>
                                        <p class="light col s6">@Html.DisplayFor(modelItem => item.Description)</p>
                                    </div>
                                </div>
                                <div class="card-action">
                                    @Html.ActionLink("Chi tiết", "Details", "Products", new {id = item.Id}, new {@class = "waves-effect waves-light btn"})
                                </div>
                            </div>
                        </div>


                    }
                </div>
                <br/>
                <div class="row" style="text-align: center;">
                    <div class="col s12">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new {page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">A modern responsive front-end framework based on Material Design</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Content/images/materialize/background3.jpg")" alt="Unsplashed background img 3"></div>
</div>
<script>
    $(document).ready(function () {
        $('.carousel').carousel();
    });
</script>





