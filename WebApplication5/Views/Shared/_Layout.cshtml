                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Dối tác bạc</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Đối tác 1</a></li>
                        <li><a class="white-text" href="#!">Đối tác 2</a></li>
                        <li><a class="white-text" href="#!">Đối tác 3</a></li>
                        <li><a class="white-text" href="#!">Đối tác 4</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Made by <a class="brown-text text-lighten-3" href="http://materializecss.com">me dang it</a>
            </div>
        </div>
    </footer>

    <!--  Scripts-->    
    <script src="@Url.Content("~/Content/materialize/js/materialize.js")"></script>
<script src="@Url.Content("~/Content/materialize/js/init.js")"></script>
    @RenderSection("scripts", required: false)
