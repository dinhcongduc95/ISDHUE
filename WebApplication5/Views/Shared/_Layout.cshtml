<body>
    <nav class="white" role="navigation" >
        <div class="nav-wrapper container">
            <a class="brand-logo teal-text text-lighten-2" href="#" style = "text-decoration: none" >Wood Pro</a>
            
            <ul id="nav-mobile" class="side-nav">
                @Html.Partial("_LoginPartial")                
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("About", "About", "Home", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Cartegories", "Index", "Categories", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Products", "Index", "Products", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Shopping", "Index", "Carts", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", null, new {@style = "text-decoration: none"})</li>
                
            </ul>
                       
            <ul class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("About", "About", "Home", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Cartegories", "Index", "Categories",null , new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Products", "Index", "Products", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Shopping", "Index", "Carts", null, new { @style = "text-decoration: none" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", null, new {@style = "text-decoration: none"})</li>
               <li>@Html.Partial("_LoginPartial")</li>
            </ul>
           
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    @RenderBody()

<div class="fixed-action-btn horizontal">
    <a class="btn-floating btn-large red" id="chatBtn">
        <i class="large material-icons">mode_edit</i>
    </a>
</div>

<div style="position: fixed; bottom: 0; right: 1%; display: none" id="chatDiv">
    <div id="divContainer">
        <div id="divLogin" class="login">
            <div>
                Tên của bạn:<br />
                <input id="txtNickName" type="text" class="textBox" />
            </div>
            <div id="divButton">
                <input id="btnStartChat" type="button" class="submitButton" value="Bắt đầu chat" />
            </div>
        </div>

        <div id="divChat" class="chatRoom">
            <div class="title">
                Chào bạn: [<span id='spanUser'></span>]
                <i class="material-icons right green-text" style="cursor: pointer" id="doneBtn">done</i>
            </div>
            <div class="content">                
                <div id="divusers" class="users">
                </div>
            </div>            
        </div>

        <input id="hdId" type="hidden" />
        <input id="hdUserName" 
        type="hidden"/>
        <input id="hdRole" value="Customer"
         type="hidden"/>
</div>
</div>
<script>
    $('#chatBtn').click(function () {
        $(this).hide();
        $('#chatDiv').show();
    });

    $('#doneBtn').click(function () {
        $('#chatBtn').show();        
        $('#chatDiv').hide();
    });
    
</script>


<footer class="page-footer teal">
        <div class="container">
