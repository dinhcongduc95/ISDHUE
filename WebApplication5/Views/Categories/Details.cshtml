@model PagedList.IPagedList<WebApplication5.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string catName = "";
    if (ViewBag.CategoryName != null)
    {
        catName = ViewBag.CategoryName;
    }
}

<div class="container">
    <div class="section">
        <!-- Icon Section -->
        <div class="card">
            <div class="card-image">
                <img class="responsive-img" src="http://placehold.it/900x350" alt="">
            </div>
            <div class="card-content">
                <h2 class="header">Các sản phẩm thuộc dòng @catName của WoodPro</h2>
                <p class="light"> Luôn chau chuốt, tỉ mỉ trong từng công đoạn sản xuât để cho ra đời những sản phẩm hoàn thiện với đầy đủ mẫu mã kiểu dáng </p>
                <div class="chip">
                    Ghế
                    <i class="close material-icons">close</i>
                </div>
                <div class="chip">
                    Bàn ghế gụ
                    <i class="close material-icons">close</i>
                </div>
                <div class="chip">
                    Gỗ ép
                    <i class="close material-icons">close</i>
                </div>
                <div class="chip">
                    Giả cổ
                    <i class="close material-icons">close</i>
                </div>
                <div class="chip">
                    Cổ Trang
                    <i class="close material-icons">close</i>
                </div>

            </div>
            
        </div>
    </div>
</div>



<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <div class="row">
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col s4" style="padding: 10px">
                                <div class="card">
                                    <div class="card-image">
                                        
                                        <img class="responsive-img" style="height: 300px" src="../..@Url.Content(item.ImageLink)"/>
                                        <h2 class="card-title">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </h2>
                                        
                                    </div>
                                    <div class="card-content">
                                        <div class="row">
                                            <p class="light col s6">Name:</p>
                                            <p class="light col s6">@Html.DisplayFor(modelItem => item.Name)</p>
                                        </div>

                                        <div class="row">
                                            <p class="light col s6">Title:</p>
                                            <p class="light col s6">@Html.DisplayFor(modelItem => item.Description)</p>
                                        </div>

                                        <div class="row">
                                            <p class="light col s6">Ngày thêm vào:</p>
                                            <p class="light col s6">@Html.DisplayFor(modelItem => item.CreateDate)</p>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        @Html.ActionLink("Chi tiết", "Details", "Products", new {id = item.Id}, new {@class = "waves-effect waves-light btn"})
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h2 class="header">Không có sản phẩm nào hết</h2>
                    }

                </div>
                <br />
                <div class="row" style="text-align: center;">
                    <div class="col s12">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">Chất lượng cao kiểu dáng hiện đại</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Content/images/materialize/background3.jpg")" alt="Unsplashed background img 3"></div>
</div>

