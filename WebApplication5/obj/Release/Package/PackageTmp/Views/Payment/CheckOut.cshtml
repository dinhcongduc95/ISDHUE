@using WebApplication5.Models

@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var product = (Product)ViewBag.Product;
}

<h2>CheckOut</h2>

@using (Html.BeginForm("CheckOut", "Payment", FormMethod.Post))
{
    <div class="row card-panel hoverable">
        <h4 class="center">Product Check Out</h4>
                       

        <div class="row">
            <div class="">
                ProductId:
            </div>
            <div class="col-md-10">
                @product.Id    
            </div>
        </div>
        <div class="row">
            <div class="">
                giá cả
            </div>
            <div class="col-md-10">
                @product.Price
            </div>
        </div>
        <div class="row">
            <div class="">
                Thành phố:
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Locations", null, htmlAttributes: new {@class = ""})
            </div>
        </div>
        <div class="row">
            <div class="">
                Địa Chỉ:
            </div>
            <div class="col-md-10">
                <input type="text" class="">
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}