@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new {area = ""}, FormMethod.Post, new { id = "logoutForm"}))
    {
    @Html.AntiForgeryToken()    
        <li>
            @Html.ActionLink("Chào bạn " + User.Identity.GetUserName() + "!", "Index", "Manage", new {area = ""}, htmlAttributes: new { title = "Manage", @style = "text-decoration: none" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style = "text-decoration: none">Đăng xuất</a></li>    
    }
}
else
{   
        <li>@Html.ActionLink("Đăng kí", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @style = "text-decoration: none" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "text-decoration: none" })</li>
  
}
