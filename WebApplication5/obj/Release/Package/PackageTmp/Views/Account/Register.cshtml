@model WebApplication5.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="center">@ViewBag.Title</h2>
<div class="container">
    <div class="card-panel hoverable col l6 offset-l3">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="center light">Create a new account</h4>

            @Html.ValidationSummary("", new { @class = "red-text" })
            <div class="row">
                <div class="input-field inline col l10 offset-l1 s12">
                    @Html.LabelFor(m => m.Email, new { @class = "" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "" })
                </div>
                

            </div>
            <div class="row">
                <div class="input-field inline col l10 offset-l1 s12">
                    @Html.LabelFor(m => m.Password, new { @class = "" })

                    @Html.PasswordFor(m => m.Password, new { @class = "" })
                </div>
            </div>
            <div class="row">
                <div class="input-field inline col l10 offset-l1 s12">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "" })
                </div>
                

            </div>
            <div class="row">
                <div class="col l11 offset-l1">
                    <input type="submit" class="waves-effect waves-light btn" value="Register" />
                </div>                                    
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
