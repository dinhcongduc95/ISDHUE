@using WebApplication5.Models
@model IEnumerable<Part>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="center light">Quản lý các phụ kiện của Product với Id: @ViewBag.ProductId</h2>

<div class="container">
    <h4 class="center">Tổng số phụ kiện: @Model.Count()</h4>
    <div class="row card-panel hoverable">
        <input type="hidden" name="ProductId" value="@ViewBag.ProductId"/>
        @Html.ActionLink("Create New", "Create", new {id = ViewBag.ProductId}, new {@class = "waves-effect waves-light btn"})
        <table class="highlight striped responsive-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Document.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Origin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        <input type="checkbox" class="deletePartCb" id="item_@item.Id"/>
                        <label for="item_@item.Id"></label>
                    </td>
                </tr>
            }
        </table>
        <div class="center" style="margin-top: 10px;">
            <a class="waves-effect waves-light btn" id="deleteBtn">Xóa phụ kiện</a>
        </div>
    </div>

    <div class="row card-panel hoverable">
        <table class="highlight striped responsive-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Document.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Origin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>
            @foreach (Part item in ViewBag.ProductPartAvails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        <input type="checkbox" class="addPartCb" id="item_@item.Id"/>
                        <label for="item_@item.Id"></label>
                    </td>
                </tr>
            }
        </table>
        <div class="center" style="margin-top: 10px;">
            <a class="waves-effect waves-light btn" id="addBtn">Thêm phụ kiện</a>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Areas/Admin/Scripts/ProductPartScript.js")"></script>