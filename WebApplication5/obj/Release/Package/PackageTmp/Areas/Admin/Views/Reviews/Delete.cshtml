@model WebApplication5.Models.Review

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="center">Xóa nhận xét có id: @Model.Id ?</h4>
    <div class="row card-panel hoverable">

        <div class="row">
            <div class="col l6 center">
                Người dùng
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.User.UserName)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Product.Name)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Product.Name)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Point)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Point)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.CreateDate)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.CreateDate)
            </div>
        </div>

    </div>

    <div class="row card-panel hoverable center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "waves-effect waves-light btn" })
            </div>
        }
    </div>
    
</div>
