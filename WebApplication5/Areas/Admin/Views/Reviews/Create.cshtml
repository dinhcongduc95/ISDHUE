@model WebApplication5.Models.Review

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="center light">Tạo đánh giá mới</h4>
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <div class="row card-panel hoverable">

            @Html.ValidationSummary(true, "", new {@class = "red-text"})
            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.ProductIdRef)
                </div>
                <div class="col l7">
                    @Html.DropDownList("ProductIdRef", null, htmlAttributes: new {@class = ""})
                    @Html.ValidationMessageFor(model => model.ProductIdRef, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.UserIdRef, "Người dùng")
                </div>
                <div class="col l7">
                    @Html.DropDownList("UserIdRef", null, htmlAttributes: new {@class = ""})
                    @Html.ValidationMessageFor(model => model.UserIdRef, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = ""})
                </div>
                <div class="col l7">
                    @Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = ""}})
                    @Html.ValidationMessageFor(model => model.Description, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.Point, htmlAttributes: new {@class = ""})
                </div>
                <div class="col l7">
                    @Html.EditorFor(model => model.Point, new {htmlAttributes = new {@class = ""}})
                    @Html.ValidationMessageFor(model => model.Point, "", new {@class = "red-text"})
                </div>
            </div>            
                        
        </div>

        <div class="row card-panel hoverable center">
            <input type="submit" value="Create" class="btn btn-default" />
            @Html.ActionLink("Back to List", "Index", null, new {@class = "waves-effect waves-light btn"})
        </div>
    }

</div>
