@model WebApplication5.Models.Part

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h4 class="center">@Html.Raw(Model.Name)</h4>

    <div class="row card-panel hoverable">

        @if (string.IsNullOrEmpty(Model.ImageLink))
        {
            <img class="responsive-img" src="http://web-vn.com/wp-content/uploads/2014/04/dummy-image-grey-e1398449111870.jpg"/>
        }
        else
        {
            <img class="responsive-img" src="../../..@Url.Content(Model.ImageLink)"/>
        }
    </div>

    <div class="row card-panel hoverable">

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Origin)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Origin)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Manufacturer)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Manufacturer)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.Document.Title)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.Document.Title)
            </div>
        </div>

        <div class="row">
            <div class="col l6 center">
                @Html.DisplayNameFor(model => model.CreateDate)
            </div>
            <div class="col l6 center">
                @Html.DisplayFor(model => model.CreateDate)
            </div>
        </div>
    </div>

    <div class="row card-panel hoverable center">
        @Html.ActionLink("Edit", "Edit", new {id = Model.Id}, new {@class = "waves-effect waves-light btn"})
        @Html.ActionLink("Back to List", "Index", null, new {@class = "waves-effect waves-light btn"})
    </div>
</div>

