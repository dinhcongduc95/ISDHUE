@model IEnumerable<WebApplication5.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 class="center">Quản lí sản phẩm </h2>


<div class="container">
    <div class="row card-panel hoverable">
        @Html.ActionLink("Create New", "Create", null, new { @class = "waves-effect waves-light btn" })
        <table class="highlight striped responsive-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Document.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Origin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id}) |
                        @Html.ActionLink("Parts", "Index",new {controller = "ProductParts", id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

