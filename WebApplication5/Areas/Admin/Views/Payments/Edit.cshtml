@model WebApplication5.Models.Payment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row card-panel hoverable">
            <h4 class="center">Chỉnh sửa đơn hàng</h4>

            @Html.ValidationSummary(true, "", new {@class = "red-text"})
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.UserIdRef)
                </div>
                <div class="col l7">
                    @Html.DropDownList("UserIdRef", null, htmlAttributes: new {@class = ""})
                    @Html.ValidationMessageFor(model => model.UserIdRef, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.ProductIdRef)
                </div>
                <div class="col l7">
                    @Html.DropDownList("ProductIdRef", null, htmlAttributes: new {@class = ""})
                    @Html.ValidationMessageFor(model => model.ProductIdRef, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.ShippingIdRef)
                </div>
                <div class="col l7">
                    @Html.DropDownList("ShippingIdRef", null, htmlAttributes: new {@class = ""})
                    @Html.ValidationMessageFor(model => model.ShippingIdRef, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.Amount, htmlAttributes: new {@class = ""})
                </div>
                <div class="col l7">
                    @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {@class = ""}})
                    @Html.ValidationMessageFor(model => model.Amount, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">
                    @Html.LabelFor(model => model.Currency, htmlAttributes: new {@class = ""})
                </div>
                <div class="col l7">
                    @Html.EditorFor(model => model.Currency, new {htmlAttributes = new {@class = ""}})
                    @Html.ValidationMessageFor(model => model.Currency, "", new {@class = "red-text"})
                </div>
            </div>

            <div class="row">
                <div class="col l1 offset-l2">

                </div>
                <div class="col l7">
                    @if (Model.IsPaid)
                    {
                        <input type="checkbox" id="IsPaid" value="true" name="IsPaid" checked/>
                    }
                    else
                    {
                        <input type="checkbox" id="IsPaid" value="true" name="IsPaid" />
                    }                    
                    <label for="IsPaid">Đã thanh toán</label>
                    @Html.ValidationMessageFor(model => model.IsPaid, "", new { @class = "red-text" })
                </div>
            </div>
           
        </div>

        <div class="row card-panel hoverable center">
            <input type="submit" value="Save" class="btn btn-default" />
            @Html.ActionLink("Back to List", "Index", null, new {@class = "waves-effect waves-light btn"})
        </div>
    }

    
</div>

